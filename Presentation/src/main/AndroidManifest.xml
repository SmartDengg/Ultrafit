<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ultrafit">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

  <application
      android:name="com.smartdengg.presentation.MyApplication"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme.SplashTheme">
    <activity android:name="com.smartdengg.presentation.views.activity.CityListActivity"
        android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
        android:name="com.smartdengg.presentation.views.activity.MovieListActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.TransparentActivity"/>

    <activity
        android:name="com.smartdengg.presentation.views.activity.DetailActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.TransparentActivity"/>

  </application>

</manifest>
