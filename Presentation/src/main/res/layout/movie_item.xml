<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorAccent"
    app:contentPadding="@dimen/material_1dp"
    app:cardCornerRadius="@dimen/material_2dp"
    app:cardElevation="@dimen/material_2dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/material_4dp"
      android:orientation="vertical"
      android:background="@color/material_white"
  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <ImageView
          android:id="@+id/movie_item_thumb_iv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
      />


      <com.example.ultrafit.ui.SmartTextView
          android:id="@+id/movie_item_score_tv"
          android:layout_toRightOf="@id/movie_item_thumb_iv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="@dimen/material_1dp"
          android:layout_centerVertical="true"
          android:gravity="center"
          android:textColor="@color/material_blue_400"
          android:textSize="@dimen/material_24sp"
          tools:text="9.6 分"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/movie_item_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/material_8dp"
        android:textColor="@color/material_blue_400"
        android:textSize="@dimen/material_13sp"
        android:maxLines="3"
        android:ellipsize="end"
        tools:text="美人鱼"
    />
  </LinearLayout>

</android.support.v7.widget.CardView>