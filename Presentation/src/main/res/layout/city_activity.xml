<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_blue_50"
    tools:context=".views.activity.MovieListActivity">

  <TextView
      android:id="@+id/city_layout_title_tv"
      android:layout_width="match_parent"
      android:layout_height="@dimen/material_128dp"
      android:textSize="@dimen/material_20sp"
      android:textColor="@color/material_white"
      android:textStyle="italic"
      android:gravity="center"
      android:background="@color/colorPrimary"
      tools:text="@string/movie_title"
  />

  <android.support.v4.widget.SwipeRefreshLayout
      android:id="@+id/city_layout_srl"
      android:layout_below="@id/city_layout_title_tv"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
  >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/city_layout_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/material_8dp"
        android:clipToPadding="false"
        tools:listitem="@layout/movie_item"
    />
  </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
