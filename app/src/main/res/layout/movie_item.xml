<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@android:color/holo_purple"
    app:contentPadding="@dimen/material_1dp"
    app:cardCornerRadius="@dimen/material_2dp"
    app:cardElevation="@dimen/material_2dp">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/material_160dp"
  >

    <ImageView
        android:id="@+id/movie_item_thumb_iv"
        android:layout_width="@dimen/material_96dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
    />

    <RelativeLayout
        android:layout_toRightOf="@id/movie_item_thumb_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/material_4dp"
        android:orientation="vertical"
        android:background="#E0E0E0"
    >

      <TextView
          android:id="@+id/movie_item_name_tv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="@dimen/material_4dp"
          android:textColor="@color/material_purple_400"
          android:textSize="@dimen/material_18sp"
          tools:text="美人鱼"
      />

      <TextView
          android:id="@+id/movie_item_description_tv"
          android:layout_below="@id/movie_item_name_tv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="@dimen/material_4dp"
          android:textColor="@color/material_purple_300"
          android:textSize="@dimen/material_16sp"
          android:ellipsize="end"
          android:maxLines="1"
          tools:text="美人随风去，宁泡一条鱼"
      />

      <TextView
          android:id="@+id/movie_item_category_tv"
          android:layout_below="@id/movie_item_description_tv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="@dimen/material_4dp"
          android:textColor="@color/material_purple_300"
          android:textSize="@dimen/material_11sp"
          android:ellipsize="end"
          android:maxLines="1"
          tools:text="爱情,科幻,喜剧"
      />

      <LinearLayout
          android:layout_alignParentBottom="true"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
      >

        <TextView
            android:id="@+id/movie_item_director_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/material_4dp"
            android:textColor="@color/material_purple_300"
            android:textSize="@dimen/material_13sp"
            tools:text="导演:周星驰"
        />

        <TextView
            android:id="@+id/movie_item_actor_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/material_4dp"
            android:textColor="@color/material_purple_300"
            android:textSize="@dimen/material_13sp"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="演员：邓超,罗志祥,张雨绮"
        />
      </LinearLayout>

    </RelativeLayout>
  </RelativeLayout>


</android.support.v7.widget.CardView>